<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hitButton"
            android:text="HIT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="userPressedHit"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton"
            android:text="STOP"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="dealerTurn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newGameButton"
            android:text="NEW GAME"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:onClick="resetGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealerButton"
            android:text="DEALER"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userCard1"
            android:text="1"
            android:textSize="28sp"
            android:layout_above="@+id/hitButton"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userCard2"
            android:text="2"
            android:textSize="28sp"
            android:layout_marginLeft="15dp"
            android:layout_above="@+id/hitButton"
            android:layout_toRightOf="@id/userCard1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userCard3"
            android:text="3"
            android:textSize="28sp"
            android:layout_marginLeft="15dp"
            android:layout_above="@+id/hitButton"
            android:layout_toRightOf="@id/userCard2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userCard4"
            android:text="4"
            android:textSize="28sp"
            android:layout_marginLeft="15dp"
            android:layout_above="@+id/hitButton"
            android:layout_toRightOf="@id/userCard3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userCard5"
            android:text="5"
            android:textSize="28sp"
            android:layout_marginLeft="15dp"
            android:layout_above="@+id/hitButton"
            android:layout_toRightOf="@id/userCard4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealerCard1"
            android:text="1"
            android:textSize="28sp"
            android:layout_below="@+id/dealerButton"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealerCard2"
            android:text="2"
            android:textSize="28sp"
            android:layout_below="@+id/dealerButton"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/dealerCard1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealerCard3"
            android:text="3"
            android:textSize="28sp"
            android:layout_below="@+id/dealerButton"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/dealerCard2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealerCard4"
            android:text="4"
            android:textSize="28sp"
            android:layout_below="@+id/dealerButton"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/dealerCard3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealerCard5"
            android:text="5"
            android:textSize="28sp"
            android:layout_below="@+id/dealerButton"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/dealerCard4"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>